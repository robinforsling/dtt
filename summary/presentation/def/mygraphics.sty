\newrobustcmd*{\mysquare}[1]{\tikz{\filldraw[draw=#1,fill=#1] (0,0) rectangle (0.18cm,0.18cm);}}
\newrobustcmd*{\mydiamond}[1]{\tikz{\filldraw[draw=#1,fill=#1,rotate=45] (0,0) rectangle (0.16cm,0.16cm);}}
\newrobustcmd*{\mycircle}[1]{\tikz{\filldraw[draw=#1,fill=#1] (0,0) circle [radius=0.1cm];}}
\newrobustcmd*{\myuptriangle}[1]{\tikz{\filldraw[draw=#1,fill=#1] (0,0) -- (0.2cm,0) -- (0.1cm,0.173cm);}}
\newrobustcmd*{\mydowntriangle}[1]{\tikz{\filldraw[draw=#1,fill=#1] (0,0) -- (0.2cm,0) -- (0.1cm,-0.173cm);}}

\newrobustcmd*{\myxtick}{\tikz{\draw[black!100!,line width=0.02mm](0,0)--(0,1.4mm);\draw[white,opacity=0](0,0)--(0,-1.4mm);}}
\newrobustcmd*{\myytick}{\tikz{\draw[black!100!,line width=0.02mm](0,0)--(1.4mm,0);\draw[white,opacity=0,](0,0)--(-1.4mm,0);}}


